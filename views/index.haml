%script(type="text/javascript" src="/flowplayer/flowplayer-3.2.6.min.js")
%script(type="text/javascript" src="/index.js")
- unless loggedin?
  %form(action='/login' method='post')
    %input(type='submit' value='login')
- else
  %table#list
    %thead
      %tr
        %th date/time
        %td CH
        %td title
        %td DL | Delete
    %tbody
      - @items.map do |item|
        %tr(data-title="#{item.title}" data-url="#{item.flvname}")
          %th= item.time.strftime("%Y/%m/%d %H:%M")
          %td= item.ch
          %td
            .playbuttons
              %a.link(href="#{item.flvname}")= item.title
              %a.2x(href="#") play 2x
          %td
            %span
              %a.flv(href="#{item.flvname}") download flv
              %a.mpg(href="#{item.mpgname}") download mpg
            %button.delete DELETE
  #videodialog.hidden
    #player.playing
    #control
      %button#start |&lt;
      %button#revL  &lt;&lt;
      %button#rev   &lt;
      %button#fwd   &gt;
      %button#fwdL  &gt;&gt;
  :javascript
    jQuery(run);
